@model MVC.Newsreel.Data.ArticleRequest
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Видаляти</title>
</head>
<body>

<h3>Видаляти запит?</h3>
<div>
    <h4>Запит</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Статус
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            Чорнова стаття
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ArticleDraft.Title)
        </dd>
        <dt class = "col-sm-2">
            Редактор
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Author.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ArticleRequestId" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Назад</a>
    </form>
</div>
</body>
</html>
