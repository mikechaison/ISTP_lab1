@model IEnumerable<MVC.Newsreel.Data.Comment>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

<div>
    <h1>Коментарії користувача</h1>
</div>
<div>
@foreach (var item in Model) {
<div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
    <div class="col p-4 d-flex flex-column position-static">
        
        <strong class="d-inline-block mb-2 text-primary-emphasis">@Html.DisplayFor(modelItem => item.Author.Name)</strong>
        <div><a asp-controller="Article" asp-action="Details" asp-route-id="@item.Article.ArticleId">@Html.DisplayFor(modelItem => item.Article.Title)</a></div>
        <div class="mb-1 text-body-secondary">@Html.DisplayFor(modelItem => item.PubDate)</div>
        <p class="card-text mb-auto">@Html.DisplayFor(modelItem => item.Text)</p>
    </div>
</div>
}
</div>
</body>
</html>
