@model IEnumerable<MVC.Newsreel.Data.ArticleDraft>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Чорнові статті</title>
</head>
<body>
<p>
    <a asp-action="Create">Додати нову чорнову статтю</a>
</p>

@foreach (var item in Model) {
<div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
    <div class="col p-4 d-flex flex-column position-static">
        <strong class="d-inline-block mb-2 text-primary-emphasis">@Html.DisplayFor(modelItem => item.SuggestedCategory.Name)</strong>
        <h3 class="mb-0">@Html.DisplayFor(modelItem => item.Title)</h3>
        <div class="mb-1 text-body-secondary">@Html.DisplayFor(modelItem => item.Author.Name)</div>
        <p class="card-text mb-auto">@item.Text.Substring(0, 550)...</p>
        <div>
                <a asp-action="Edit" asp-route-id="@item.ArticleDraftId">Змінити</a> |
                <a asp-action="Details" asp-route-id="@item.ArticleDraftId">Відкрити</a> |
                <a asp-action="Delete" asp-route-id="@item.ArticleDraftId">Видалити</a>
        </div>
    </div>
    <div class="col-auto d-none d-lg-block">
        <img class="bg-img" src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Patron_with_Golden_Paw_award.jpg/280px-Patron_with_Golden_Paw_award.jpg" width="300" height="300">
        <!--<svg class="bd-placeholder-img" xmlns="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Patron_with_Golden_Paw_award.jpg/280px-Patron_with_Golden_Paw_award.jpg" role="img" height="100%">
        <rect width="100%" height="100%" fill="#55595c"></rect></svg>-->
    </div>
</div>
}

</body>
</html>
